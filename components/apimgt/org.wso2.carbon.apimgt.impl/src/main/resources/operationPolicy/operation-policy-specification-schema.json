{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "category": {
      "type": "string",
      "enum": [
        "Mediation",
        "Security"
      ]
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "displayName": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string"
    },
    "multipleAllowed": {
      "type": "boolean"
    },
    "applicableFlows": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "request",
          "response",
          "fault"
        ]
      }
    },
    "supportedGateways": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "Synapse",
          "ChoreoConnect"
        ]
      }
    },
    "supportedApiTypes": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "REST",
          "GRAPHQL",
          "STREAMING"
        ]
      }
    },
    "policyAttributes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "displayName": {
            "type": "string",
            "minLength": 1
          },
          "description": {
            "type": "string"
          },
          "validationRegex": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "minLength": 1
          },
          "required": {
            "type": "boolean"
          }
        },
        "required": [
          "name",
          "displayName",
          "description",
          "validationRegex",
          "type",
          "required"
        ]
      }
    }
  },
  "required": [
    "category",
    "name",
    "displayName",
    "description",
    "multipleAllowed",
    "applicableFlows",
    "supportedGateways",
    "supportedApiTypes"
  ]
}